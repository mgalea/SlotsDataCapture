@model SlotsDataCapture.ENTITIES.SlotImages
@{ViewBag.Title = "Create";}
@{
    ViewBag.Title = "create new entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container-fluid">
        @using (Html.BeginForm("Add", "SlotImages", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-top-container">
                <div class="card form-rounder">
                    <div class="card-header">
                        <div class="card bg-dark text-white">
                            <div class="card-body">
                                <h5 class="tl-sda-tl-bar">S.D.C<span class="tl-fm-create">Add</span>New Record</h5>
                            </div>
                        </div> @*Card Header Title Content*@
                    </div>
                    @*Card Header End*@
                    <div class="card-body">
                        <p class="form-location">Slot Machine Snapshot <span class="form-location-bold">Machnine Image</span></p>
                        <div class="row  form-row-form-content">

                            <div class="col-md-12 offset-md-1">
                                <!-- set form width -->
                                <div class="form-row mt-8">
                                    <!-- set control width -->
                                    <div class="col-sm-6 pb-3">
                                        <span class="form-style-create">
                                            <i class="fa fa-calendar"></i>
                                            <i class="fa fa-gear"></i>
                                        </span>
                                        <label for="lbl_createdon" class="lbl-01">Created On</label>
                                        @Html.EditorFor(model => model.CreatedOn, new { htmlAttributes = new { @class = "form-control field-validation " } })
                                        @Html.ValidationMessageFor(model => model.CreatedOn, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6 pb-3">
                                        <span class="form-style-create">
                                            <i class="fa fa-gear"></i>
                                            <i class="fa fa-image"></i>
                                        </span>
                                        <label for="lbl_slotList" class="lbl-01">Select Machine</label>
                                        @Html.DropDownList("SlotID", null, htmlAttributes: new { @class = "form-control field-validation" })
                                        @Html.ValidationMessageFor(model => model.SlotID, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6 pb-3">
                                        <span class="form-style-create">
                                            <i class="fa fa-gear"></i>
                                            <i class="fa fa-image"></i>
                                        </span>
                                        <label for="lbl_operatorEstablishment" class="lbl-01">Operator Establishment</label>
                                        @Html.DropDownList("VenueID", null, htmlAttributes: new { @class = "form-control field-validation" })
                                        @Html.ValidationMessageFor(model => model.VenueID, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6 pb-3">
                                        <span class="form-style-create">
                                            <i class="fa fa-gear"></i>
                                            <i class="fa fa-image"></i>
                                        </span>
                                        <label for="lbl_imageCategory" class="lbl-01">Image Category</label>
                                        @Html.DropDownList("ImageTypeID", null, htmlAttributes: new { @class = "form-control field-validation" })
                                        @Html.ValidationMessageFor(model => model.ImageTypeID, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-12 pb-3"></div>
                                    <div class="col-sm-10 pb-3">
                                        <span class="form-style-create">
                                            <i class="fa fa-pencil-square-o"></i>
                                            <i class="fa fa-image"></i>
                                        </span>
                                        <label for="lbl_imageDescrption" class="lbl-01">Basic Description</label>
                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control field-validation textarea-plus" })
                                        @Html.ValidationMessageFor(model => model.Description)
                                    </div>
                                    <div class="col-sm-12 pb-3"></div>
                                    <div class="col-sm-8 pb-3">
                                        <span class="form-style-create">
                                            <i class="fa fa-search-plus"></i>
                                            <i class="fa fa-image"></i>
                                        </span>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" name="ImageFile" id="validatedCustomFile" required>
                                            <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                                            <div class="invalid-feedback">Invalid file feedback</div>
                                            @Html.ValidationMessageFor(model => model.ImagePath)
                                        </div>
                                    </div>
                                </div>
                            </div> @*Close form-row mt-8">*@
                        </div> @*Close col-md-12 offset-md-1">*@
                    </div> @*Close Card Body*@
                    <div class="row form-row-form-controls">
                        <div class="col-sm-6">
                            <input type="submit" value="Add" class="btn btn-outline-info " />
                        </div>
                        <div class="col-sm-6">@Html.ActionLink("Back To Listings", "Index", "Companies", null, new { @class = "btn btn-outline-primary" })</div>
                    </div>
                    <div class="card-header border-0">
                        <div class="card bg-dark text-white">
                            <div class="card-body">
                                <div>
                                    @Html.Partial("footer")
                                </div>
                            </div>
                        </div> @*Card Header Title Content*@
                    </div>
                </div> @*Card Main Card*@
            </div>
        }
    </div>























































