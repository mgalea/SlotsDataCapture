@model IEnumerable<SlotsDataCapture.ENTITIES.BoardBatches>
@{ViewBag.Title = "Index";}
<div class="container-fluid">
    <div class="form-top-container">
        <div class="card border-0">
            <div class="card-header border-0">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <h5 class="tl-sda-tl-bar">S.D.C<span class="tl-fm-list">Board-Batch</span>Listings</h5>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <span>
                            <i class="fa fa-plus"></i>
                            @Html.ActionLink("Create New", "Create", "BoardBatches", new { @class = "btn btn-outline-info btn-lg" })
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr class="bg-dark text-white">
                    <th class="form-th-item">Boards received on</th>
                    <th class="form-th-item">Internal batch ref</th>
                    <th class="form-th-item">Manufacturer</th>
                    <th class="form-th-item">Quantity</th>
                    <th></th>
                    <th class="form-th-item"><i class="fa fa-cog"></i> Details</th>
                    <th class="form-th-item"><i class="fa fa-cog"></i> Edit</th>
                    @*<th class="form-th-item"><i class="fa fa-cog"></i> Delete</th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="form-tr-item">
                        <td>@Html.DisplayFor(modelItem => item.ReceivedOn)</td>
                        <td>@Html.DisplayFor(modelItem => item.BatchNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Tbl_BoardManufacturers.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.UnitsReceived)</td>
                        <td></td>
                        <td>@Html.ActionLink("Details", "Details", new { id = item.SMIBatchID }, new { @class = "btn btn-outline-primary btn-sm" }) </td>
                        <td>@Html.ActionLink("Edit", "Edit", new { id = item.SMIBatchID }, new { @class = "btn btn-outline-warning btn-sm" }) </td>
                        @*<td>@Html.ActionLink("Delete", "Delete", new { id = item.SMIBatchID }, new { @class = "btn btn-outline-danger btn-sm" }) </td>*@
                    </tr>
                }
            </tbody>
        </table>
        <div class="card-header border-0">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <div>
                        @Html.Partial("footer")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 