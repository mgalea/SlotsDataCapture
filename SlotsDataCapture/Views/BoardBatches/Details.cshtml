@model SlotsDataCapture.ENTITIES.BoardBatches
@{ViewBag.Title = "Details";}
<div class="container-fluid">
    <div class="form-top-container">
        <div class="card border-0">
            <div class="card-header border-0">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <h5 class="tl-sda-tl-bar">S.D.C<span class="tl-fm-detail">Details</span></h5>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <p class="form-location">Details<span class="form-location-bold">Board Batch  @Html.DisplayFor(model => model.BatchNumber)</span></p>
                <div class="row  form-row-form-content">
                    <div class="col-md-12 offset-md-1">
                        <!-- set form width -->
                        <div class="form-row mt-10">
                            <div class="container">
                                <div class="row">
                                    <div class="col-sm">
                                        <span class="form-style-details">
                                            <i class="fa fa-calendar" aria-hidden="true"></i>
                                            <i class="fa fa-gear" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                    <div class="col-sm"></div>
                                    <div class="col-sm">
                                        <span class="form-style-details">
                                            <i class="fa fa-gear" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm"><span for="lbl_receivedon" class="lbl-01">Reveiced on</span></div>
                                    <div class="col-sm"></div>
                                    <div class="col-sm"><span for="lbl_batchnumber" class="lbl-01">Batch ref</span></div>
                                </div>
                                <div class="row">
                                    <div class="col-sm"><span class="lbl-001">@Html.DisplayFor(model => model.ReceivedOn)</span></div>
                                    <div class="col-sm"></div>
                                    <div class="col-sm"><span class="lbl-001">@Html.DisplayFor(model => model.BatchNumber)</span></div>
                                </div>
                                <div class="row form-spliter"></div>
                                <div class="row">
                                    <div class="col-sm">
                                        <span class="form-style-details">
                                            <i class="fa fa-gear" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                    <div class="col-sm"></div>
                                    <div class="col-sm">
                                        <span class="form-style-details">
                                            <i class="fa fa-gear" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm"><span for="lbl_name" class="lbl-01">Manufacturer</span></div>
                                    <div class="col-sm"></div>
                                    <div class="col-sm"><span for="lbl_quantity" class="lbl-01">Quantity</span></div>
                                </div>
                                <div class="row">
                                    <div class="col-sm"><span class="lbl-001">@Html.DisplayFor(model => model.Tbl_BoardManufacturers.Name)</span></div>
                                    <div class="col-sm"></div>
                                    <div class="col-sm"><span class="lbl-001">@Html.DisplayFor(model => model.UnitsReceived)</span></div>
                                </div>
                                <div class="row form-spliter"></div>
                                <div class="row">
                                    <div class="col-sm">
                                        <span class="form-style-details">
                                            <i class="fa fa-gear" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                    <div class="col-sm"></div>
                                    <div class="col-sm">
                                        <span class="form-style-details">
                                            <i class="fa fa-gear" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm"><span for="lbl_type" class="lbl-01">Board type</span></div>
                                    <div class="col-sm"></div>
                                    <div class="col-sm"><span for="lbl_location" class="lbl-01">Location</span></div>
                                </div>
                                <div class="row">
                                    <div class="col-sm"><span class="lbl-001">@Html.DisplayFor(model => model.Tbl_BoardTypes.Name)</span></div>
                                    <div class="col-sm"></div>
                                    <div class="col-sm"><span class="lbl-001">@Html.DisplayFor(model => model.BoardLocation)</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row  form-row-form-controls">
                    <div class="col-sm-6">
                        <span class="form-style-details">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.SMIBatchID }, new { @class = "btn btn-outline-primary" })
                        </span>
                    </div>
                    <div class="col-sm-6">
                        <span class="form-style-details">
                            @Html.ActionLink("Back To Admin", "Index", "BoardBatches", null, new { @class = "btn btn-outline-primary" })
                        </span>
                    </div>
                </div>
            </div>
            <div class="card-header border-0">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <div>
                            @Html.Partial("footer")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 