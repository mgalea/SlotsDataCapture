@model SlotsDataCapture.ENTITIES.Returns
@{ViewBag.Title = "Details";}

    <div class="container-fluid">
        <div class="form-top-container">
            <div class="card border-0">
                <div class="card-header border-0">
                    <div class="card bg-dark text-white">
                        <div class="card-body">
                            <h5 class="tl-sda-tl-bar">S.D.C<span class="tl-fm-detail">Detail</span>Record<span class="tl-fm-dynamic">@Html.DisplayFor(model => model.TrackingNumber)</span></h5>
                        </div>
                    </div> @*Card Header Title Content*@
                </div> @*Card Header End*@

                <div class="row  form-row-shade-active">
                    <div class="col-sm-6">
                        <span class="form-style-details">
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                            <i class="fas fa-chart-pie"></i>
                            <label for="lbl_returnedon" class="lbl-01">Returned On:</label>
                        </span>
                        <p class="lbl-01">@Html.DisplayFor(model => model.ReturnDate)</p>
                    </div>
                </div>
                <div class="row  form-row-shade-active">
                    <div class="col-sm-6">
                        <span class="form-style-details">
                            <i class="fas fa-chart-pie"></i>
                            <label for="lbl_returnedby" class="lbl-01">Returned By:</label>
                        </span>
                        <p class="lbl-01">@Html.DisplayFor(model => model.ReturnedBy)</p>
                    </div>
                    <div class="col-sm-6">
                        <span class="form-style-details">
                            <i class="fas fa-chart-pie"></i>
                            <label for="lbl_couriername" class="lbl-01">Courier Name:</label>
                        </span>
                        <p class="lbl-01">@Html.DisplayFor(model => model.Tbl_CourierService.Name)</p>
                    </div>
                </div>
                <div class="row  form-row-shade-active">
                    <div class="col-sm-6">
                        <span class="form-style-details">
                            <i class="fas fa-chart-pie"></i>
                            <label for="lbl_devicetype" class="lbl-01">Device Type:</label>
                        </span>
                        <p class="lbl-01">@Html.DisplayFor(model => model.Tbl_Reports.DeviceType)</p>
                    </div>
                    <div class="col-sm-6">
                        <span class="form-style-details">
                            <i class="fas fa-chart-pie"></i>
                            <label for="lbl_deviceserialnumber" class="lbl-01">Device Serial Number:</label>
                        </span>
                        <p class="lbl-01">@Html.DisplayFor(model => model.Tbl_Reports.DeviceSerialNumber)</p>
                    </div>
                </div>
                 <div class="row  form-row-shade-active">
                    <div class="col-sm-6">
                        <span class="form-style-details">
                            <i class="fas fa-chart-pie"></i>
                            <label for="lbl_trackingnumber" class="lbl-01">Tracking Number:</label>
                        </span>
                        <p class="lbl-01">@Html.DisplayFor(model => model.TrackingNumber)</p>
                    </div>
                    <div class="col-sm-6">
                        <span class="form-style-details">
                            <i class="fas fa-chart-pie"></i>
                            <label for="lbl_isdispatched" class="lbl-01">Item Returned ?</label>
                        </span>
                        <p class="lbl-01">@Html.DisplayFor(model => model.IsDispatched)</p>
                    </div>

                </div>

                <div class="row  form-row-shade-active">
                    <div class="col-sm-6">
                        @Html.ActionLink("Edit Return", "Edit", new { id = Model.ReportID }, new { @class = "btn btn-outline-primary" })
                    </div>
                    <div class="col-sm-6">

                        @Html.ActionLink("Back To Listings", "Index", "Companies", null, new { @class = "btn btn-outline-primary" })

                    </div>
                </div>
            </div> @*Close Main Card*@

            <div class="card-header border-0">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <div>
                            @Html.Partial("footer")
                        </div>
                    </div>
                </div> @*Card Header Title Content*@
            </div>
        </div>@*Close Parent Container*@
    </div>