@model SlotsDataCapture.ENTITIES.SimCardBatches
@{ViewBag.Title = "Edit";}

    <div class="container-fluid">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(a => a.SimBatchID)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-top-container">
                <div class="card form-rounder">
                    <div class="card-header">
                        <div class="card bg-dark text-white">
                            <div class="card-body">
                                <h5 class="tl-admin-tl-bar">Administration<span class="tl-fm-edit">Edit</span>Record<span class="tl-fm-dynamic">@Html.DisplayFor(model => model.BatchReference)</span></h5>
                            </div>
                        </div> @*Card Header Title Content*@
                    </div>
                    @*Card Header End*@
                <div class="card-body">
                    <p class="form-location">Edit<span class="form-location-bold">Sim Card Batch</span></p>
                    <div class="row  form-row-form-content">
                        <div class="col-md-12 offset-md-1">
                            <!-- set form width -->
                            <div class="form-row mt-8">
                                <!-- set control width -->
                                <div class="col-sm-6 pb-3">
                                    <span class="form-style-edit">
                                        <i class="fa fa-sim-card" aria-hidden="true"></i>
                                    </span>
                                    <label for="lbl_manufacturer" class="lbl-01">Manufacturer Name:</label>
                                    @Html.DropDownList("SIM_ManufacturerID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SIM_ManufacturerID, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-6 pb-3">
                                    <span class="form-style-edit">
                                        <i class="fa fa-sim-card" aria-hidden="true"></i>
                                    </span>
                                    <label for="lbl_cardsize" class="lbl-01">Card Size</label>
                                    @Html.DropDownList("SIM_CardTypeID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SIM_CardTypeID, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-sm-6 pb-3">
                                    <span class="form-style-edit">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                        <i class="fa fa-sim-card" aria-hidden="true"></i>
                                    </span>
                                    <label for="lbl_receivedon" class="lbl-01">Received On:</label>
                                    <span class="class=" lbl-001"> @Html.DisplayFor(model => model.ReceivedOn)</span>
                                    @Html.HiddenFor(model => model.ReceivedOn)
                                </div>

                                <div class="col-sm-6 pb-3">
                                    <span class="form-style-edit">
                                        <i class="fa fa-sim-card" aria-hidden="true"></i>
                                    </span>
                                    <label for="lbl_quantity" class="lbl-01">Quantity:</label>
                                    @Html.EditorFor(model => model.UnitsReceived, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UnitsReceived, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-6 pb-3">
                                    <span class="form-style-edit">
                                        <i class="fa fa-sim-card" aria-hidden="true"></i>
                                    </span>
                                    <label for="lbl_batchreference" class="lbl-01">Batch Reference Number:</label>
                                    @Html.EditorFor(model => model.BatchReference, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.BatchReference, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-6 pb-3">
                                    <span class="form-style-edit">
                                        <i class="fa fa-sim-card" aria-hidden="true"></i>
                                    </span>
                                    <label for="lbl_location" class="lbl-01">Storage Location:</label>
                                    @Html.EditorFor(model => model.CardLocation, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CardLocation, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div> @*Close form-row mt-8">*@
                </div> @*Close Card Body*@
                <div class="row form-row-form-controls">
                    <div class="col-sm-6">
                        <input type="submit" value="Save" class="btn btn-outline-warning " />
                    </div>
                    <div class="col-sm-6">@Html.ActionLink("Back To Administration ", "Index", "SimCardBatches", null, new { @class = "btn btn-outline-primary" })</div>


                </div>
                    <div class="card-header border-0">
                        <div class="card bg-dark text-white">
                            <div class="card-body">
                                <div>
                                    @Html.Partial("footer")
                                </div>
                            </div>
                        </div> @*Card Header Title Content*@
                    </div>
                </div> @*Card Main Card*@
            </div>
        }
    </div>