@model SlotsDataCapture.ENTITIES.Configuration
@{ViewBag.Title = "Edit";}
@{
    ViewBag.Title = "create new entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x => x.ConfigurationID)
        <div class="form-top-container">
            <div class="card form-rounder">
                <div class="card-header">
                    <div class="card bg-dark text-white">
                        <div class="card-body">
                            <h5 class="tl-sda-tl-bar">S.D.C<span class="tl-fm-edit">Edit</span>Record<span class="tl-fm-dynamic">@Html.DisplayFor(model => model.Tbl_Slots.SerialNumber)</span></h5>
                        </div>
                    </div> @*Card Header Title Content*@
                </div> @*Card Header End*@
                @*Card Header End*@
            <div class="card-body">
                <p class="form-location">Edit<span class="form-location-bold">Slot Configuration @Html.DisplayFor(model => model.Tbl_Slots.SerialNumber)</span></p>
                <div class="row  form-row-form-content">
                    <div class="col-md-12 offset-md-1">
                        <!-- set form width -->
                        <div class="form-row mt-8">
                            <!-- set control width -->
                            <div class="col-sm-6 pb-3">
                                <span class="form-style-edit">
                                    <span style="color:blue">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                        <i class="fas fa-sim-card"></i>
                                    </span>
                                </span>
                                <label for="lbl_simactivation" class="lbl-01">Sim Card Activated On</label>
                                <br />
                                <span class="lbl-01" style="color:red">
                                    @Html.DisplayFor(model => model.SIM_ActivatedOn)
                                </span>
                                @Html.HiddenFor(x => x.SIM_ActivatedOn)
                            </div>
                            <div class="col-sm-6 pb-3">
                                <span class="form-style-edit">
                                    <span style="color:red">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                        <i class="fas fa-sim-card"></i>
                                    </span>
                                </span>
                                <label for="lbl_simdecativatedon" class="lbl-01">Sim Card Deactivation Date</label>
                                @Html.EditorFor(model => model.SIM_DeactivatedOn, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SIM_DeactivatedOn, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-12 pb-3"></div>
                            <div class="col-sm-6 pb-3">
                                <span class="form-style-edit">
                                    <span style="color:blue">
                                        <i class="fas fa-sim-card"></i>
                                    </span>
                                </span>
                                <label for="lbl_simcardlist" class="lbl-01">Available Sim Cards</label>
                                <p class="form-db-record-count">Total Available Sim Cards = @ViewBag.SimCardRecordCount</p>
                                @*@Html.DropDownList("SIMCardID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SIMCardID, "", new { @class = "text-danger" })*@
                                @Html.HiddenFor(model => model.SIMCardID)
                                @Html.EditorFor(model => model.Tbl_SimCards.SerialNumber, new { htmlAttributes = new { @class = "form-control field-validation", id = "CardSerial" } })

                            </div>
                            <div class="col-sm-12 pb-3"><br /></div>
                            <div class="col-sm-6 pb-3">
                                <span class="form-style-edit">
                                    <span style="color:green">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                        <i class="fas fa-sim-card"></i>
                                    </span>
                                </span>
                                <label for="lbl_boardactivation" class="lbl-01">Board Activated On</label>
                                <br />
                                <span class="lbl-01" style="color:red">
                                    @Html.DisplayFor(model => model.SMIB_ActivatedOn)
                                </span>
                                @Html.HiddenFor(model => model.SMIB_ActivatedOn)
                            </div>
                            <div class="col-sm-6 pb-3">
                                <span class="form-style-edit">
                                    <span style="color:red">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                        <i class="fas fa-sim-card"></i>
                                    </span>
                                </span>
                                <label for="lbl_boarddeactvation" class="lbl-01">Board Deactivate On</label>
                                @Html.EditorFor(model => model.SMIB_DeactivatedOn, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SMIB_DeactivatedOn, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-12 pb-3"></div>
                            <div class="col-sm-6 pb-3">
                                <span class="form-style-edit">
                                    <span style="color:green">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                        <i class="fas fa-sim-card"></i>
                                    </span>
                                </span>
                                <label for="lbl_boardlist" class="lbl-01">Enter Board Serial Number</label>
                                <p class="form-db-record-count">Total Available Boards = @ViewBag.SMIBoardRecordCount</p>
                                @*@Html.DropDownList("SMIBID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SMIBID, "", new { @class = "text-danger" })*@
                                @Html.HiddenFor(model => model.SMIBID)
                                @Html.EditorFor(model => model.Tbl_Boards.SerialNumber, new { htmlAttributes = new { @class = "form-control field-validation", id = "BoardSerial" } })
                            </div>
                            <div class="col-sm-12 pb-3"><br /></div>
                            <div class="col-sm-6 pb-3">
                                <span class="form-style-edit">
                                    <span style="color:orange">
                                        <i class="fa fa-warning" aria-hidden="true"></i>
                                        <i class="fas fa-cogs"></i>
                                    </span>
                                </span>
                                <label for="lbl_slotmachinelist" class="lbl-01">Assign Sim Card & Board To Slot Machine</label>
                                <p class="form-db-record-count">Total Available Devices = @ViewBag.DeviceRecordCount</p>
                                @*@Html.DropDownList("SlotID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SlotID, "", new { @class = "text-danger" })*@
                                @Html.HiddenFor(model => model.SlotID)
                                @Html.EditorFor(model => model.Tbl_Slots.SerialNumber, new { htmlAttributes = new { @class = "form-control field-validation", id = "SlotMachineSerial" } })

                            </div>
                            <div class="col-sm-12 pb-3"><br /></div>
                            <div class="col-sm-6 pb-3">
                                <span class="form-style-edit">
                                    <span style="color:red">
                                        <i class="fas fa-sim-card"></i>
                                    </span>
                                </span>
                                <span class="lbl-01">Assign Board To Slot Machine</span>
                                @Html.EditorFor(model => model.SMIBoardNowAssigned, new { @class = "custom-control-input" })
                                @Html.ValidationMessageFor(model => model.SMIBoardNowAssigned, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 pb-3">
                                <span class="form-style-edit">
                                    <span style="color:red">
                                        <i class="fas fa-sim-card"></i>
                                    </span>
                                </span>
                                <span class="lbl-01">Assign Sim Card To Slot Machine</span>
                                @Html.EditorFor(model => model.SIMCardNowAssigned, new { @class = "custom-control-input" })
                                @Html.ValidationMessageFor(model => model.SIMCardNowAssigned, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    @*Close form-row mt-8">*@
                </div> @*Close col-md-12 offset-md-1">*@
            </div> @*Close Card Body*@
                <div class="row form-row-form-controls">
                    <div class="col-sm-6">
                        <input type="submit" value=" Save " class="btn btn-outline-warning " />
                    </div>
                    <div class="col-sm-6">
                        @Html.ActionLink("Back To Listings", "Index", "Companies", null, new { @class = "btn btn-outline-primary" })
                    </div>
                </div>
                <div class="card-header border-0">
                    <div class="card bg-dark text-white">
                        <div class="card-body">
                            <div>
                                @Html.Partial("footer")
                            </div>
                        </div>
                    </div> @*Card Header Title Content*@
                </div>
            </div> @*Card Main Card*@
        </div>
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#CardSerial').autocomplete({
            source: '/Configurations/FindCard',
            select: function (event, ui) {
                $('#SIMCardID').val(ui.item.id);
                this.value = ui.item.value;

                //  alert(ui.item.id);
                {
                    value = this.value = ui.item.name + ui.item.value
                    return value;
                }

            }

        });
    });
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#BoardSerial').autocomplete({
            source: '/Configurations/FindBoard',
            select: function (event, ui) {
                $('#SMIBID').val(ui.item.id);

                //  alert(ui.item.id);
                this.value = ui.item.value;

                {
                    value = this.value = ui.item.name + ui.item.value
                    return value;
                }
            }

        });
    });
</script>



<script type="text/javascript">
    $(document).ready(function () {
        $('#SlotMachineSerial').autocomplete({
            source: '/Configurations/FindSlotMachine',
            select: function (event, ui) {
                $('#SlotID').val(ui.item.id);

                // alert(ui.item.id);

                this.value = ui.item.value;
                {
                    value = this.value = ui.item.name + ui.item.value
                    return value;
                }
            }

        });
    });
</script>