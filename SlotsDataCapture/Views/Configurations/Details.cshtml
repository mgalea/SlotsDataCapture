                                    <div class="col-sm"><span class="lbl-001">@Html.DisplayFor(model => model.Tbl_Slots.Tbl_OperatorVenues.Name)</span></div>
                                    <div class="col-sm"><span class="lbl-001">@Html.DisplayFor(model => model.Tbl_Slots.Tbl_OperatorVenues.Town) </span></div>
                                    <div class="col-sm"><span class="lbl-001"> @Html.DisplayFor(model => model.Tbl_Slots.Tbl_OperatorVenues.Phone) </span></div>
                                </div>
                                <div class="row form-spliter"></div>
                                <div class="row">
                                    <div class="col-sm">
                                        <span class="form-style-details">
                                            <span style=" color:lightblue">
                                                <i class="fas fa-plug"></i>
                                            </span>
                                        </span>
                                    </div>
