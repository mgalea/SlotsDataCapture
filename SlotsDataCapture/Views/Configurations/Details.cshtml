                                    <div class="col-sm">
                                        <span class="form-style-details">
                                            <span style=" color:lightblue">
                                                <i class="fas fa-plug"></i>
                                            </span>
                                        </span>
                                    </div>
                                    <div class="col-sm">
                                        <span class="form-style-details">
                                            <span style=" color:lightblue">
                                                <i class="fas fa-plug"></i>
                                            </span>
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm"><span for="lbl_slotseriale" class="lbl-01"><b>Slot Machine </b> Serial Number</span></div>
                                    <div class="col-sm"><span for="lbl_slotasset" class="lbl-01"><b>Slot Machine </b> Asset Number</span></div>
                                    <div class="col-sm"><span for="lbl_slotslocation" class="lbl-01"><b>Slot Machine </b> Motherboard</span></div>
                                </div>
