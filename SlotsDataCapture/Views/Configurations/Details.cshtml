                                    <div class="col-sm"><span class="lbl-001">@Html.DisplayFor(model => model.Tbl_Slots.Tbl_Manufacturers.Name)</span></div>
                                    <div class="col-sm"><span class="lbl-001">@Html.DisplayFor(model => model.Tbl_Slots.Tbl_ManufacturerModels.Name)</span></div>
