@model SlotsDataCapture.ENTITIES.OperatorVenues
@{ViewBag.Title = "Delete";}
<div class="container-fluid">
    <div class="form-top-container">
        <div class="card border-0">
            <div class="card-header border-0">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <h5 class="tl-sda-tl-bar">S.D.C<span class="tl-fm-delete">Delete</span>Record<span class="tl-fm-dynamic">@Html.DisplayFor(model => model.Name)</span></h5>  
                    </div>
                </div> @*Card Header Title Content*@
            </div> @*Card Header End*@

        <div class="row  form-row-shade-active">
            <div class="col-sm-6">
                <span class="form-style-delete">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    <i class="fa fa-1x  fa-institution" aria-hidden="true"></i>
                    <label for="lbl_parentoperator" class="form-lb-red">Parent Operator Name:</label>
                </span>
                <p class="lbl-01">@Html.DisplayFor(model => model.Tbl_Operators.Name)</p>
            </div>



            <div class="col-sm-6">
                <span class="form-style-delete">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    <i class="fa fa-1x  fa-institution" aria-hidden="true"></i>
                    <label for="lbl_establishmentname" class="form-lb-red">Name:</label>
                </span>
                <p class="lbl-01">@Html.DisplayFor(model => model.Name)</p>
            </div>


        </div>
            <div class="row  form-row-shade-active">
                <div class="col-sm-6">
                    <span class="form-style-delete">
                        <i class="fa fa-1x  fa-institution" aria-hidden="true"></i>
                        <label for="lbl_location" class="form-lb-red">Operator Location:</label>
                    </span>
                    <p class="lbl-01">@Html.DisplayFor(model => model.Town)</p>
                </div>
                <div class="col-sm-6">
                    <span class="form-style-delete">
                        <i class="fa fa-1x  fa-institution" aria-hidden="true"></i>
                        <label for="lbl_corporationnum" class="form-lb-red">Activity Status:</label>
                    </span>
                    <p class="lbl-01">@Html.DisplayFor(model => model.IsActiveDisplay)</p>
                </div>
            </div>

            <div class="row  form-row-shade-active">
                <div class="col-sm-6">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <input type="submit" value="Delete" class="btn btn-outline-danger" />
                    }
                </div>
                <div class="col-sm-6">
                    @Html.ActionLink("Back To Listings", "Index", new { id = Model.VenueID }, new { @class = "btn btn-outline-primary" })
                </div>
            </div>
        </div> @*Close Main Card*@
        <div class="card-header border-0">
            <div class="card bg-dark text-white">
                <div class="card-body">
                    <div>
                        @Html.Partial("footer")
                    </div>
                </div>
            </div> @*Card Header Title Content*@
        </div>
    </div>@*Close Parent Container*@
</div>