@model SlotsDataCapture.ENTITIES.Reports

    <div class="container-fluid">
        <div class="form-top-container">
            <div class="card border-0">
                <div class="card-header border-0">
                    <div class="card bg-dark text-white">
                        <div class="card-body">
                            <h5 class="tl-sda-tl-bar">S.D.C<span class="tl-fm-detail">Detail</span>Record<span class="tl-fm-dynamic">@Html.DisplayFor(model => model.ReportID)</span></h5>
                        </div>
                    </div> @*Card Header Title Content*@
                </div> @*Card Header End*@
                <div class="row  form-row-shade-active">
                    <div class="col-sm-6">
                        <span class="form-style-details">
                            <i class="fas fa-chart-pie"></i>
                            <label for="lbl_createdon" class="lbl-01">Created On"</label>
                        </span>
                        <p class="lbl-01">@Html.DisplayFor(model => model.CreatedOn)</p>
                    </div>
                    <div class="col-sm-6">
                        <span class="form-style-details">
                            <i class="fas fa-chart-pie"></i>
                            <label for="lbl_createdby" class="lbl-01">Created By:</label>
                        </span>
                        <p class="lbl-01">@Html.DisplayFor(model => model.CreatedBy)</p>
                    </div>
                </div>
                <div class="row  form-row-shade-active">
                    <div class="col-sm-6">
                        <span class="form-style-details">
                            <i class="fa fa-1x  fa-institution" aria-hidden="true"></i>
                            <label for="lbl_devicetype" class="lbl-01">Device Type:</label>
                        </span>
                        <p class="lbl-01">@Html.DisplayFor(model => model.DeviceType)</p>
                    </div>
                    <div class="col-sm-6">
                        <span class="form-style-details">
                            <i class="fa fa-1x  fa-institution" aria-hidden="true"></i>
                            <label for="lbl_deviceserial" class="lbl-01">Device Serial Number:</label>
                        </span>
                        <p class="lbl-01">@Html.DisplayFor(model => model.DeviceSerialNumber)</p>
                    </div>
                </div>

                <div class="row  form-row-shade-active">
                    <div class="col-sm-12">
                        <span class="form-style-details">
                            <i class="fa fa-1x  fa-institution" aria-hidden="true"></i>
                            <label for="lbl_comments" class="lbl-01">Associated Comments:</label>
                        </span>
                        <p class="lbl-01">@Html.DisplayFor(model => model.Comments)</p>
                    </div>
                    <div class="col-sm-6">
                        <span class="form-style-details">
                            <i class="fa fa-1x  fa-institution" aria-hidden="true"></i>
                            <label for="lbl_deviceserial" class="lbl-01">Device Serial Number:</label>
                        </span>
                        <p class="lbl-01">@Html.DisplayFor(model => model.DeviceSerialNumber)</p>
                    </div>
                </div>


                <div class="row  form-row-shade-active">
                    <div class="col-sm-6">
                        @Html.ActionLink("Edit Report", "Edit", new { id = Model.ReportID }, new { @class = "btn btn-outline-primary" })
                    </div>
                    <div class="col-sm-6">

                        @Html.ActionLink("Back To Listings", "Index", new { id = Model.ReportID }, new { @class = "btn btn-outline-primary" })

                    </div>
                </div>
            </div> @*Close Main Card*@

            <div class="card-header border-0">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <div>
                            @Html.Partial("footer")
                        </div>
                    </div>
                </div> @*Card Header Title Content*@
            </div>
        </div>@*Close Parent Container*@
    </div>
@{ViewBag.Title = "Details";}