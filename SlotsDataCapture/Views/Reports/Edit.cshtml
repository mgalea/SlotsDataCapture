@model SlotsDataCapture.ENTITIES.Reports
@{ViewBag.Title = "Edit";}
    <div class="container-fluid">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(x => x.ReportID)
            <div class="form-top-container">
                <div class="card form-rounder">
                    <div class="card-header">
                        <div class="card bg-dark text-white">
                            <div class="card-body">
                                <h5 class="tl-sda-tl-bar">S.D.C<span class="tl-fm-edit">Edit</span>Record<span class="tl-fm-dynamic">@Html.DisplayFor(model => model.ReportID)</span></h5>
                            </div>
                        </div> @*Card Header Title Content*@
                    </div>
                    @*Card Header End*@
                    <div class="card-body">
                        <div class="row  form-row-shade-active">
                            <div class="col-md-12 offset-md-1">
                                <!-- set form width -->
                                <div class="form-row mt-8">
                                    <!-- set control width -->
                                    <div class="col-sm-6 pb-3">
                                        <span class="form-style-edit">
                                            <i class="fa fa-calendar" aria-hidden="true"></i>
                                            <i class="fas fa-chart-pie"></i>
                                        </span>
                                        <label for="lbl_createdon" class="lbl-01">Created On:</label>
                                        <p class="lbl-01"> @Html.DisplayFor(model => model.CreatedOn)</p>
                                        @Html.HiddenFor(model => model.CreatedOn)
                                    </div>
                                    <div class="col-sm-6 pb-3">
                                        <span class="form-style-edit">
                                            <i class="fa fa-user" aria-hidden="true"></i>
                                            <i class="fas fa-chart-pie"></i>
                                        </span>
                                        <label for="lbl_createdby" class="lbl-01">Created By:</label>
                                        <p class="lbl-01">@Html.DisplayFor(model => model.CreatedBy) </p>
                                        @Html.HiddenFor(model => model.CreatedBy)
                                    </div>
                                    <div class="col-sm-12 pb-3"></div>
                                    <div class="col-sm-6 pb-3">
                                        <span class="form-style-edit">
                                            <i class="fas fa-chart-pie"></i>
                                        </span>
                                        <label for="lbl_device" class="lbl-01">Select Faulty Device:</label>
                                        @Html.DropDownList("DeviceType", new List<SelectListItem>{
                                          new SelectListItem { Text = "Please Select", Value = "Please Select" },
                                          new SelectListItem { Text = "Board Issue",  Value = "Board Issue" },
                                          new SelectListItem { Text = "Sim Card Issue",  Value = "Sim Card Issue" },
                                          new SelectListItem { Text = "Slot Machine Issue",  Value = "Slot Machine Issue" },
                                          new SelectListItem { Text = "Slot Machine Motherboard",  Value = "Slot Motherboard" },
                                          },
                                           new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.DeviceType, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6 pb-3">
                                        <span class="form-style-edit">
                                            <i class="fa fa-user" aria-hidden="true"></i>
                                            <i class="fas fa-chart-pie"></i>
                                        </span>
                                        <label for="lbl_serialnumber" class="lbl-01">Device Serial Number:</label>
                                        @Html.EditorFor(model => model.DeviceSerialNumber, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DeviceSerialNumber, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-12 pb-3"></div>
                                    <div class="col-sm-10 pb-3">
                                        <span class="form-style-edit">
                                            <i class="fa fa-lock" aria-hidden="true"></i>
                                            <i class="fa fa-gear" aria-hidden="true"></i>
                                        </span>
                                        <label for="lbl_imageDescription" class="form-lb">Description</label>
                                        @Html.TextAreaFor(model => model.Comments, new { @class = "form-textarea" })
                                        @Html.ValidationMessageFor(model => model.Comments)
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <input type="submit" value="Save" class="btn btn-outline-warning " />
                                    </div>
                                    <div class="col-sm-6">@Html.ActionLink("Back To Listings", "Index", "Reports", null, new { @class = "btn btn-outline-primary" })</div>
                                </div>
                            </div>
                            @*Close form-row mt-8">*@
                        </div> @*Close col-md-12 offset-md-1">*@
                    </div> @*Close Card Body*@
                    <div class="card-header border-0">
                        <div class="card bg-dark text-white">
                            <div class="card-body">
                                <div>
                                    @Html.Partial("footer")
                                </div>
                            </div>
                        </div> @*Card Header Title Content*@
                    </div>
                </div> @*Card Main Card*@
            </div>
        }
    </div>